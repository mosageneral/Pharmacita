@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        
           var user = User.Identity.GetUserId ();
           
        


    <ul class="nav navbar-nav navbar-right">
        <li>
            <a class="nav-link">Hello   @User.Identity.GetUserName() !</a>
        </li>
        <li >@Html.ActionLink("Your Profile ", "MainProfile", "Account", new { Id = user }, new { @class = "nav-link" })</li>
        <li>
            <a class="nav-link" href="~/Drugs/Create">بيع دواء</a>
        </li>
        <li>
            <a class="nav-link" href="~/Drugfinds/Index">الادوية المطلوبة </a>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
