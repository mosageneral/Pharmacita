                    <img src="~/upload/@Html.DisplayFor(model => model.ProfilePic)" class="thumbnail img-responsive"   style="height :300px;width :300px;" alt="" />
                </div>
                <!-- END SIDEBAR USERPIC -->
                <!-- SIDEBAR USER TITLE -->
               
                <!-- END SIDEBAR USER TITLE -->
