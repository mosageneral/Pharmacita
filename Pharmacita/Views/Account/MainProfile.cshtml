                <!-- END SIDEBAR BUTTONS -->
                <!-- SIDEBAR MENU -->
                @{ 
                    if (user==Model.Id )
                    {


                <div class="profile-usermenu">
                    <ul class="nav">
                        
                        <li>
                            <a href="~/Home/GetDrugsBySeller">
