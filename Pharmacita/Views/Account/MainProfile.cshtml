@model Pharmacita.Models.ApplicationUser

    @{
        ViewBag.Title = "MainProfile";
    }

    <h2>MainProfile</h2>

    
<br />
<div class="container">
    <div class="row profile">
        <div class="col-md-3">
            <div class="profile-sidebar">
                <!-- SIDEBAR USERPIC -->
                <div class="profile-userpic">
                    <img src="~/upload/@Html.DisplayFor(model => model.ProfilePic)" class="thumbnail img-responsive"   style="height :300px;width :300px;" alt="" />
                </div>
                <!-- END SIDEBAR USERPIC -->
                <!-- SIDEBAR USER TITLE -->
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">
                        @Html.DisplayFor(model => model.UserName)
                    </div>
                    <div class="profile-usertitle-name">
                    0 @Html.DisplayFor(model => model.Mobile)
                    </div>
                    <div class="profile-usertitle-name">
                        @Html.DisplayFor(model => model.Address)
                    </div>
                    <div class="profile-usertitle-name">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                    
                    
                </div>
                <!-- END SIDEBAR USER TITLE -->
                <!-- SIDEBAR BUTTONS -->
                <div class="profile-userbuttons">
                   
                    <button type="button" class="btn btn-success btn-sm">Message</button>
                </div>
                <!-- END SIDEBAR BUTTONS -->
                <!-- SIDEBAR MENU -->
                <div class="profile-usermenu">
                    <ul class="nav">
                        
                        <li>
                            <a href="#">
                                <i class="glyphicon glyphicon-user"></i>
                                Account Settings
                            </a>
                        </li>
                       
                       
                    </ul>
                </div>
                <!-- END MENU -->
            </div>
        </div>
        <div class="col-md-9">
            <div class="profile-content">
                Some user related content goes here...
            </div>
        </div>
    </div>
</div>

<br>
<br>