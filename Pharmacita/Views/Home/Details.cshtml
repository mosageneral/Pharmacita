@model Pharmacita.Models.Drug

@{
    ViewBag.Title = "تفاصيل الدواء";
}

<h1>التفاصيل</h1>

<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt style="font-size:large;">
           النوع 
        </dt>

        <dd style="font-size:large;">
            @Html.DisplayFor(model => model.category.CategoryName)
        </dd>

        <dt style="font-size:large;">
          الإسم
        </dt>

        <dd style="font-size:large;">
            @Html.DisplayFor(model => model.DrugName)
        </dd>

        <dt style="font-size:large;">
           الوصف
        </dt>

        <dd style="font-size:large;">
            @Html.DisplayFor(model => model.DrugDescribtion)
        </dd>

        <dt style="font-size:large;">
            الكمية
        </dt>

        <dd style="font-size:large;">
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt style="font-size:large;">
            الصورة
        </dt>

        <dd style="font-size:large;">
            
            <img class="thumbnail "style="width:200px;height:200px;" src="~/upload/@Html.DisplayFor(model => model.DrugImage)" />
        </dd>

        <dt style="font-size:large;">
            تاريخ الانتهاء
        </dt>

        <dd style="font-size:large;">
            @Html.DisplayFor(model => model.Expire)
        </dd>

        <dt style="font-size:large;">
            الخصم
        </dt>

        <dd style="font-size:large;">
           % @Html.DisplayFor(model => model.Off)
        </dd>

        <dt style="font-size:large;">
            السعر بالمصري
        </dt>

        <dd style="font-size:large;">
            @Html.DisplayFor(model => model.Price)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("تواصل مع البائع", "Buy", new { id = Model.Id },new { @class = "btn btn-primary" })
  
</p>
