@model IEnumerable<Pharmacita.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div panel panel-default>
    @foreach (var item in Model)
    {
        <h1 class="panel-heading">@Html.DisplayFor(modelItem => item.CategoryName)</h1>
        <div class="panel-body">
            @foreach (var subitem in item.drugs  )
            {
                <div class="col-md-4">
                    <h2>@Html.DisplayFor(modelItem => subitem.DrugName)</h2>
                    <img class="thumbnail " src="~/upload/@Html.DisplayFor(modelItem =>subitem.DrugImage)" />
                    <p>@Html.DisplayFor(modelItem => subitem.DrugDescribtion)</p>
                    <p>@Html.DisplayFor(modelItem => subitem.Quantity)</p>
                    <p>@Html.DisplayFor(modelItem => subitem.Expire)</p>
                    <p>@Html.DisplayFor(modelItem => subitem.Off)</p>
                    <p>@Html.DisplayFor(modelItem => subitem.Price)</p>

                    @Html.ActionLink("اشتري ", "Details", new { Id = subitem.Id }, new { @class = "btn btn-primary" })
                </div>
            }
        </div>
    }
</div> 