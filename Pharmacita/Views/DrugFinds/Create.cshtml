@model Pharmacita.Models.DrugFind

@{
    ViewBag.Title = "Create";
}

<h2>أطلب دواء</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="control-label col-md-2">اسم الدواء المطلوب</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DrugName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DrugName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
         <p class="control-label col-md-2">وصف الدواء المطلوب</p> 
            <div class="col-md-10">
                @Html.EditorFor(model => model.DrugDescribtion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DrugDescribtion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
         <p class="control-label col-md-2">  الكمية المطلوبة </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="أطلب" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("العودة لقائمة الادوية المطلوبه", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
